name: Merge PRs automatically

on:
  pull_request:
    types: [opened]

jobs:
  merge:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2
      - name: Merge pull request
        uses: peter-evans/merge-pull-request-action@v2.5.1
        with:
          github-token: ${{ secrets.GITHUB_TOKEN }}
